<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/linearLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/signin_background"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_content_left_padding"
        android:layout_marginRight="@dimen/activity_content_right_padding"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivSignInLogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/signin_activity_content_segment_separator"
            android:background="@drawable/sign_in_logo"
            android:scaleType="fitXY"/>

        <RelativeLayout
            android:id="@+id/rlSignUpEmailBackground"
            android:layout_width="match_parent"
            android:layout_height="@dimen/edit_text_standard_height"
            android:layout_marginBottom="@dimen/activity_content_bottom_padding"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/ivSignUpEmailBackground"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/edit_text_background"/>

            <EditText
                style="@style/StudyRoom.EditText"
                android:id="@+id/etSignUpEmail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:background="@android:color/transparent"
                android:gravity="center_vertical"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:paddingLeft="@dimen/activity_content_left_padding"
                android:paddingRight="@dimen/activity_content_right_padding"
                android:singleLine="true"
                android:textSize="@dimen/study_room_body_text_size">

                <requestFocus/>
            </EditText>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rlUsername"
            android:layout_width="match_parent"
            android:layout_height="@dimen/edit_text_standard_height"
            android:layout_marginBottom="@dimen/activity_content_bottom_padding"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/ivSignUpUsernameBackground"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/edit_text_background"/>

            <EditText
                style="@style/StudyRoom.EditText"
                android:id="@+id/etSignUpUsername"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:background="@android:color/transparent"
                android:gravity="center_vertical"
                android:hint="Username"
                android:inputType="text"
                android:paddingLeft="@dimen/activity_content_left_padding"
                android:paddingRight="@dimen/activity_content_right_padding"
                android:singleLine="true"
                android:textSize="@dimen/study_room_body_text_size">
            </EditText>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rlPassword"
            android:layout_width="match_parent"
            android:layout_height="@dimen/edit_text_standard_height"
            android:layout_marginBottom="@dimen/activity_content_bottom_padding"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/ivSignUpPasswordBackground"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/edit_text_background"/>

            <EditText
                style="@style/StudyRoom.EditText"
                android:id="@+id/etSignUpPassword"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:background="@android:color/transparent"
                android:gravity="center_vertical"
                android:hint="Password"
                android:inputType="textPassword"
                android:paddingLeft="@dimen/activity_content_left_padding"
                android:paddingRight="@dimen/activity_content_right_padding"
                android:singleLine="true"
                android:textSize="@dimen/study_room_body_text_size">
            </EditText>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rlPasswordConfirmation"
            android:layout_width="match_parent"
            android:layout_height="@dimen/edit_text_standard_height"
            android:layout_marginBottom="@dimen/activity_content_bottom_padding"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/ivSignUpPasswordConfirmationBackground"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/edit_text_background"/>

            <EditText
                style="@style/StudyRoom.EditText"
                android:id="@+id/etSignUpPasswordConfirmation"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:background="@android:color/transparent"
                android:gravity="center_vertical"
                android:hint="Password Confirmation"
                android:inputType="textPassword"
                android:paddingLeft="@dimen/activity_content_left_padding"
                android:paddingRight="@dimen/activity_content_right_padding"
                android:singleLine="true"
                android:textSize="@dimen/study_room_body_text_size">
            </EditText>
        </RelativeLayout>

        <Button
            android:id="@+id/bSignUp"
            style="@style/StudyRoom.PurpleButton"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_bar_height"
            android:layout_marginTop="@dimen/activity_content_vertical_separator_margin"
            android:background="@drawable/purple_button_selector"
            android:onClick="signUp"
            android:text="Sign Up"/>
    </LinearLayout>

</LinearLayout>