<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/activity_content_left_padding"
    android:layout_marginRight="@dimen/activity_content_right_padding"
    android:gravity="center"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_marginTop="16dp"
        android:background="@drawable/text_area_background" >

        <EditText
            android:id="@+id/etReportDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_margin="@dimen/study_room_standard_large_buffer"
            android:background="@android:color/transparent"
            android:gravity="top"
            android:hint="Describe the problem"
            android:minLines="5" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_bar_height"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/bPostReportCancel"
            style="@style/StudyRoom.GreyButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="45"
            android:text="Cancel" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="5" >
        </View>

        <Button
            android:id="@+id/bPostReportPost"
            style="@style/StudyRoom.PurpleButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="45"
            android:text="Report" />
    </LinearLayout>

</LinearLayout>