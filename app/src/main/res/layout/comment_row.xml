<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_content_left_padding"
    android:paddingRight="@dimen/activity_content_right_padding"
    android:paddingTop="@dimen/activity_content_top_padding"
    android:paddingBottom="@dimen/activity_content_bottom_padding"
    android:orientation="vertical" >
    
    <TextView
        android:id="@+id/tvCommentRowDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:text="..."
        android:paddingBottom="@dimen/activity_content_bottom_padding"
        android:textSize="15dp" >
    </TextView>
    
    <LinearLayout
        android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:gravity="right"
    	android:orientation="horizontal" >
	
    <TextView
        android:id="@+id/tvCommentRowUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="..."
        android:textSize="15dp" 
        >
    </TextView>    
    
    <TextView
        android:id="@+id/tvCommentRowDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:paddingLeft="@dimen/comment_row_date_author_seperator"
        android:text=""
        android:textSize="15dp" 
        android:textColor="@color/light_grey">
    </TextView> 
        
    </LinearLayout>

</LinearLayout>
