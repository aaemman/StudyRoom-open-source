<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/titleBar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/activity_content_bottom_padding"
    android:background="@drawable/answer_page_content_background"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_content_left_padding"
        android:layout_marginRight="@dimen/activity_content_right_padding"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="What is the Proper way to format an APA style References Page?"
            android:textColor="@color/eighty_p_grey"
            android:textSize="25sp" >
        </TextView>

        <TextView
            android:id="@+id/Class"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="ClassName"
            android:textColor="#000000"
            android:textSize="12sp"
            android:textStyle="bold" >
        </TextView>
    </LinearLayout>

</LinearLayout>